<main class="container mt-5">
    <h1 class="mb-4">Edit Blog</h1>
    <form class="update-blog-form" class="mb-3">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                value="{{title}}"
            />
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea
                class="form-control"
                id="content"
                name="content"
                rows="10"
            >{{content}}</textarea>
        </div>
        <button type="submit" id="update-blog" class="btn btn-primary">Update</button>
        <button type="button" id="delete-blog" class="btn btn-danger">Delete Blog</button>
    </form>
</main>