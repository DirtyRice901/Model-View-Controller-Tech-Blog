<main class="container mt-5">
    <h1 class="mb-4 text-white">Blog Threads</h1>
    <div class="row">
        {{#each blogs}}
        <div class="col-md-3">
            <div class="col-mb-3">
                <div class="card-header bg-warning">
                    <h2 class="card-title">
                        <a href="/blog/{{id}}" class="text-dark">{{title}}</a>
                    </h2>
                </div>
                <div class="card-body">
                    <p>Created by: {{user.username}} | Date: {{format_date createdAt}}</p>
                </div>    
            </div>
        </div>
        {{/each}}
    </div>
</main>